# Work IQ Configuration
# Copy this file to .env and fill in your values

# ============================================================================
# Work IQ Settings
# ============================================================================

# Your Microsoft 365 Tenant ID or domain (e.g., contoso.onmicrosoft.com)
WORKIQ_TENANT_ID=your-tenant-id

# Enable caching for Work IQ queries (true/false)
WORKIQ_CACHE_ENABLED=true

# Cache duration in seconds (default: 3600 = 1 hour)
WORKIQ_CACHE_DURATION=3600

# ============================================================================
# Dataverse Configuration
# ============================================================================

# Your Dataverse environment URL
# Example: https://orgname.crm.dynamics.com
DATAVERSE_ENVIRONMENT_URL=https://your-org.crm.dynamics.com

# Azure AD App Registration for Dataverse access
DATAVERSE_CLIENT_ID=your-app-registration-client-id
DATAVERSE_CLIENT_SECRET=your-app-registration-secret
DATAVERSE_TENANT_ID=your-tenant-id

# Dataverse API version
DATAVERSE_API_VERSION=9.2

# ============================================================================
# Email Configuration (Optional - for daily briefing emails)
# ============================================================================

# SMTP Server settings
SMTP_HOST=smtp.office365.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@company.com
SMTP_PASS=your-password-or-app-password

# Email recipient for automated briefings
BRIEFING_EMAIL_RECIPIENT=your-email@company.com

# ============================================================================
# Monitoring & Analytics (Optional)
# ============================================================================

# Application Insights Instrumentation Key
APPINSIGHTS_INSTRUMENTATION_KEY=your-appinsights-key

# Enable detailed logging (true/false)
ENABLE_DEBUG_LOGGING=false

# Log level (error, warn, info, debug)
LOG_LEVEL=info

# ============================================================================
# Power Platform (Optional)
# ============================================================================

# Power Platform Environment ID
POWER_PLATFORM_ENVIRONMENT_ID=your-environment-id

# Power Apps Maker Portal URL
POWER_APPS_URL=https://make.powerapps.com

# ============================================================================
# Security & Compliance
# ============================================================================

# Enable audit logging
ENABLE_AUDIT_LOG=true

# Audit log retention days
AUDIT_LOG_RETENTION_DAYS=90

# ============================================================================
# Development Settings
# ============================================================================

# Node environment (development, production, test)
NODE_ENV=development

# Port for local development server (if applicable)
PORT=3000

# Enable hot reload for development
HOT_RELOAD=true
